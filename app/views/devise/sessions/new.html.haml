.Wrapper
  .AccountPage
    = render "profiles/header"
    .AccountPage__form
      .AccountPage__new
        %p アカウントをお持ちでない方はこちら
        =link_to new_user_registration_path, class:'Account__new--btn' do
          新規会員登録
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .FormField
          .FormField__content
            .FormField__label--normal
              = f.label :メールアドレス
            .FormField__input--normal
              = f.email_field :email, autofocus: true, placeholder: "メールアドレス"
            .FormField
              .FormField__label--normal
                = f.label :パスワード
              .FormField__input--normal
                = f.password_field :password, autocomplete: "off", placeholder: "パスワード"
            .actions
              = f.submit "ログイン", class: 'Button UserButton'
    = render "profiles/footer"
    